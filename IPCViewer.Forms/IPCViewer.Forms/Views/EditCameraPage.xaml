<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IPCViewer.Forms.Views.EditCameraPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Edit camera"
    BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <ScrollView BindingContext="{Binding EditCamera}">
            <StackLayout Padding="10">

                <Image HeightRequest="250">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TapCommand}" />
                    </Image.GestureRecognizers>

                    <Image.Source>
                        <UriImageSource Uri="{Binding Camera.ImageFullPath}" />
                    </Image.Source>
                </Image>

                <Label
                    FontSize="Small"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsVisible}"
                    Text="{Binding UrlCamera}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Name  -->
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Name" />

                    <Entry
                        Grid.Row="0"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Placeholder="Camera name"
                        Text="{Binding Camera.Name}" />

                    <!--  Comments  -->
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="Comments" />
                    <Entry
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Placeholder="Comments"
                        Text="{Binding Camera.Comments}" />

                    <!--  Latitude  -->
                    <Entry
                        Grid.Row="3"
                        Grid.Column="1"
                        Placeholder="Longitude..."
                        Text="{Binding Longitude}" />

                    <!--  Longitude  -->
                    <Entry
                        Grid.Row="3"
                        Grid.Column="2"
                        Placeholder="Latitude..."
                        Text="{Binding Latitude}" />

                    <Button
                        Grid.Row="3"
                        Grid.Column="0"
                        Command="{Binding AddLocationCommand}"
                        FontSize="Small"
                        Text="Location"
                        VerticalOptions="End" />

                </Grid>
                <ActivityIndicator HorizontalOptions="Center" IsRunning="{Binding IsRunning}" />
                <StackLayout Orientation="Horizontal">

                    <Button
                        BorderColor="DarkGreen"
                        Command="{Binding SaveCommand}"
                        HorizontalOptions="FillAndExpand"
                        IsEnabled="{Binding IsEnabled}"
                        Text="Save"
                        TextColor="DarkGreen" />

                    <Button
                        BorderColor="Red"
                        Command="{Binding DeleteCommand}"
                        HorizontalOptions="FillAndExpand"
                        IsEnabled="{Binding IsEnabled}"
                        Text="Delete"
                        TextColor="Red" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>