<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="IPCViewer.Forms.Views.EditCameraPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Edit camera">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding EditCamera}">
            <StackLayout
                Padding="10">
                <forms:CachedImage
                    DownsampleToViewSize="true"
                    HeightRequest="250"
                    Source="{Binding Camera.ImageUrl}"
                    ></forms:CachedImage>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Name -->
                    <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        Text="Name"/>

                    <Entry
                        Grid.Column="1"
                        Grid.Row="0"
                        Placeholder="Camera name"
                        Text="{Binding Camera.Name}"/>

                    <!-- Latitude -->
                    <Label
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="Latitude"/>

                    <Entry
                        Grid.Column="1"
                        Grid.Row="1"
                        Placeholder="Latitude"
                        Text="{Binding Camera.Latitude}"
                        Keyboard="Numeric"/>

                    <!-- Longitude -->
                    <Label
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="Longitude"/>

                    <Entry
                        Grid.Column="1"
                        Grid.Row="2"
                        Placeholder="Longitude"
                        Text="{Binding Camera.Longitude}"
                        Keyboard="Numeric"/>

                    <!-- Image Url -->
                    <Label
                        Grid.Column="0"
                        Grid.Row="3"
                        Text="Url"/>

                    <Entry
                        Grid.Column="1"
                        Grid.Row="3"
                        Placeholder="ImageUrl"
                        Text="{Binding Camera.ImageUrl}"/>


                    <!-- User -->
                    <Label
                        Grid.Column="0"
                        Grid.Row="5"
                        Text="Creación: "/>

                    <Entry
                        Grid.Column="1"
                        Grid.Row="5"
                        Text="{Binding Camera.User.FirstName}"
                        IsReadOnly="True"/>

                    <!-- Comments -->
                    <Label
                        Grid.Column="0"
                        Grid.Row="4"
                        Text="Comments"/>

                    <Entry
                        Grid.Column="1"
                        Grid.Row="4"
                        Placeholder="Comments"
                        Text="{Binding Camera.Comments}"
                        />


                </Grid>
                <ActivityIndicator
                    IsRunning="{Binding IsRunning}"
                    VerticalOptions="CenterAndExpand"/>

                <StackLayout
                    Orientation="Horizontal">

                    <Button
                        BorderColor="DarkGreen"
                        TextColor="DarkGreen"
                    	Command="{Binding SaveCommand}"
                    	HorizontalOptions="FillAndExpand"
                    	IsEnabled="{Binding IsEnabled}"
                    	Text="Save"/>

                    <Button
                        BorderColor="Red"
                    	Command="{Binding DeleteCommand}"
                    	HorizontalOptions="FillAndExpand"
                    	IsEnabled="{Binding IsEnabled}"
                    	Text="Delete"
                    	TextColor="Red"/>

                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>