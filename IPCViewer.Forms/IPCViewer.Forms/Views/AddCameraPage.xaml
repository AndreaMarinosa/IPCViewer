<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IPCViewer.Forms.Views.AddCameraPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Add Camera">
    
    <ContentPage.Content>
        <ScrollView
        	BindingContext="{Binding AddCamera}">
            <StackLayout
            	Padding="10">
                <Image
                	HeightRequest="150"
                	Source="{Binding Image}">
                </Image>
                <Label
                	FontSize="Micro"
                	HorizontalOptions="Center"
                	Text="Tap the image to change it...">
                </Label>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Name -->
                    <Label
                    	Grid.Column="0"
                    	Grid.Row="0"
                    	Text="Name"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="0"
                    	Placeholder="Name..."
                    	Text="{Binding Name}">
                    </Entry>
                    
                    <!-- Latitude -->
                    <Label
                    	Grid.Column="0"
                    	Grid.Row="1"
                    	Text="Latitude"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="1"
                    	Placeholder="Latitude..."
                    	Text="{Binding Latitude}"/>


                    <!-- Longitude -->
                    <Label
                    	Grid.Column="0"
                    	Grid.Row="2"
                    	Text="Longitude"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="2"
                    	Placeholder="Longitude..."
                    	Text="{Binding Longitude}"/>

                    <!-- Comments -->
                    <Label
                    	Grid.Column="0"
                    	Grid.Row="3"
                    	Text="Comments"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="3"
                    	Placeholder="Comments..."
                    	Text="{Binding Comments}"/>

                    <Label
                    	Grid.Column="0"
                    	Grid.Row="4"
                    	Text="ImageUrl"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="4"
                    	Placeholder="ImageUrl..."
                    	Text="{Binding ImageUrl}"/>

                    <!-- City -->
                    <Label
                    	Grid.Column="0"
                    	Grid.Row="5"
                    	Text="Localización"
                    	VerticalOptions="Center">
                    </Label>
                    <Picker
                    	Grid.Column="1"
                    	Grid.Row="5"
                    	Title="Select a city..."
                    	ItemDisplayBinding="{Binding Name}"
                    	ItemsSource="{Binding Cities}"
                    	SelectedItem="{Binding City}"/>
                </Grid>
                    
                <ActivityIndicator
                	IsRunning="{Binding IsRunning}"
                	VerticalOptions="CenterAndExpand">
                </ActivityIndicator>
                    
                <Button
                	Command="{Binding SaveCommand}"
                	IsEnabled="{Binding IsEnabled}"
                	Text="Save">
                </Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
