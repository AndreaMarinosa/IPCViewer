<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IPCViewer.Forms.Views.ProfilePage"
             xmlns:i18n="clr-namespace:IPCViewer.Forms.Helpers"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Modify User">
    <ContentPage.Content>
        <ScrollView
        	BindingContext="{Binding Profile}">
            <StackLayout
            	Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--Firstname-->
                    <Label
                    	Grid.Column="0"
                    	Grid.Row="0"
                    	Text="{i18n:Translate Firstname}"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="0"
                    	Placeholder="{i18n:Translate FirstnamePlaceHolder}"
                    	Text="{Binding User.FirstName}">
                    </Entry>

                    <!--Email-->
                    <Label
                    	Grid.Column="0"
                    	Grid.Row="1"
                    	Text="Email"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="1"
                    	Placeholder="Email"
                    	Text="{Binding User.Email}">
                    </Entry>
                    
                    <!--City-->
                    <Label
                    	Grid.Column="0"
                    	Grid.Row="2"
                    	Text="City"
                    	VerticalOptions="Center">
                    </Label>
                    <Picker
                    	Grid.Column="1"
                    	Grid.Row="2"
                    	    ItemDisplayBinding="{Binding Name}"
                            ItemsSource="{Binding Cities}"
                    	    SelectedItem="{Binding City}"
                    	    Title="{i18n:Translate CitySelect}">
                    </Picker>
                    
                </Grid>
                <ActivityIndicator
                	IsRunning="{Binding IsRunning}"
                	VerticalOptions="CenterAndExpand">
                </ActivityIndicator>
                <StackLayout
                	Orientation="Horizontal">
                    <Button
                    	Command="{Binding SaveCommand}"
                    	HorizontalOptions="FillAndExpand"
                    	IsEnabled="{Binding IsEnabled}"
                    	Text="Save"
                        BorderColor="Green"
                        TextColor="Green">
                    </Button>
                    <Button
                    	Command="{Binding ModifyPasswordCommand}"
                    	HorizontalOptions="FillAndExpand"
                    	IsEnabled="{Binding IsEnabled}"
                    	Text="Modify Password">
                    </Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
