<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IPCViewer.Forms.Views.RegisterPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Register">

    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Register}">
            <StackLayout>
                <StackLayout
            	Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image
                            HeightRequest="50"
                            Grid.RowSpan="2"
                            Grid.Row="0"
                            Source="mainlyData"/>

                        <!-- Nombre -->
                        <Entry
                    	Grid.Column="1"
                    	Grid.Row="0"
                    	Placeholder="Firstname..."
                    	Text="{Binding FirstName}"/>

                        <!-- Apellido -->
                        <Entry
                    	Grid.Column="1"
                    	Grid.Row="1"
                    	Placeholder="Lastname..."
                    	Text="{Binding LastName}"/>
                        
                        <!-- City -->
                        <Image
                            Grid.Row="3" 
                            Grid.Column="0"
                            Source="city"
                            VerticalOptions="CenterAndExpand"/>

                        <Picker
                    	    Grid.Column="1"
                    	    Grid.Row="3"
                    	    ItemDisplayBinding="{Binding Name}"
                    	    ItemsSource="{Binding Cities}"
                    	    SelectedItem="{Binding City}"
                    	    Title="Select a city...">
                        </Picker>

                        <!-- Email -->
                        <Image
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="40"
                            Grid.Row="4" 
                            Grid.Column="0"
                            Source="emailIcon"/>

                        <Entry
                    	    Grid.Column="1"
                    	    Grid.Row="4"
                    	    Keyboard="Email"
                    	    Placeholder="Email..."
                    	    Text="{Binding Email}"/>

                        <!-- Pass -->
                        <Image
                            HeightRequest="40"
                            Grid.Row="5" 
                            Grid.Column="0"
                            Source="passIcon"/>

                        <Entry
                    	    Grid.Column="1"
                    	    Grid.Row="5"
                    	    IsPassword="True"
                    	    Placeholder="Password..."
                    	    Text="{Binding Password}"/>

                        <!-- Confirm pass-->
                        <Image
                            HeightRequest="40"
                            Grid.Row="6" 
                            Grid.Column="0"
                            Source="passIcon"/>

                        <Entry
                    	    Grid.Column="1"
                    	    Grid.Row="6"
                    	    IsPassword="True"
                    	    Placeholder="Confirm password..."
                    	    Text="{Binding Confirm}"/>
                    </Grid>
                    
                    <ActivityIndicator
                	IsRunning="{Binding IsRunning}"
                	VerticalOptions="CenterAndExpand">
                    </ActivityIndicator>
                    
                    <Button
                	    Command="{Binding RegisterCommand}"
                	    HeightRequest="46"
                	    HorizontalOptions="FillAndExpand"
                	    IsEnabled="{Binding IsEnabled}"
                	    Text="Register New User">
                    </Button>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>